import java.awt.Color;
import java.awt.Graphics;
import java.awt.Image;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JPanel;

public class Spielflaeche extends JPanel {

	@Override
	public void paint(Graphics g) {
		try {

			String sPath = this.getClass().getResource("./pics").getFile()
					.replaceAll("%20", " ");

			Image img = ImageIO.read(new File("sPath\\gruenes_gras.jpg"));
			// img = ImageIO.read(new File(".\\pics\\duke.gif"));
			g.drawImage(img, 50, 50, null);
		} catch (IOException e) {
			g.drawString("Fehler: Bild nicht geladen", 10, 10);
		}

		Spielfeld play = new Spielfeld(20, 20);
		for (int x = 0; x < 20; x++) {
			for (int y = 0; y < 20; y++) {
				play.fill(x, y, 1);
			}
		}

		for (int x = 0; x < 20; x++) {
			for (int y = 0; y < 20; y++) {
				if (play.getObj(x, y) == 1) {
					g.setColor(Color.BLUE);
					g.drawRect(x * 20, y * 20, 20, 20);

				}

			}
		}
	}

}